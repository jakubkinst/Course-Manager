{block title}Outbox{/block}
{block head}{/block}
{block content}
    <div id="message_outbox">
        {if $logged}
            <h3>My Outbox</h3>
            <div class="separator"><!----></div>
            <div class="buttonline">
                <a class="abutton" href="{link inbox}">Inbox</a>
                <a class="abutton" href="{link new}">New Message</a>
            </div>
            <table>
                <thead>
                    <td>Subject</td> 
                    <td>To</td>              
                    <td>Sent</td>
                </thead>
                {foreach $outbox as $message}    
                    
                        <tr> 
                            
                        <td><a href="{link showMessage, $message['id']}">{$message['subject']}</a></td>  
                        <td>{$message['to']['email']}</td>                                          
                        <td>{$message['sent']}</td>
                    
                    </tr>
                {/foreach}
            </table>  
        {/if}
    </div>
{/block}